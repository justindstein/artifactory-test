        <profile>
            <id>registry-k8s</id>
            <activation>
                <!-- if this profile is active by default -->
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <docker.registry>myregistry-127-0-0-1.nip.io:5000</docker.registry>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.eclipse.jkube</groupId>
                        <artifactId>kubernetes-maven-plugin</artifactId>
                        <version>${jkube.version}</version>
                        <executions>
                            <execution>
                                <id>default</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>resource</goal>
                                    <goal>build</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <images>
                                <image>
                                    <!-- https://www.eclipse.org/jkube/docs/kubernetes-maven-plugin#registry -->
                                    <registry>${docker.registry}</registry>
                                    <name>${project.artifactId}:${project.version}</name>
                                    <build>
                                        <!-- https://www.eclipse.org/jkube/docs/kubernetes-maven-plugin#external-dockerfile -->
                                        <dockerFile>${project.basedir}/Dockerfile</dockerFile>
                                        <filter>@</filter>
                                    </build>
                                </image>
                            </images>
                            <buildArgs>
                                <JAR_FILE>${project.build.finalName}.jar</JAR_FILE>
                            </buildArgs>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
